<div class="row">
    <div class="col-sm-9 col-dados mx-auto">
        <h3 class="mb-4">Adicionar Cartão</h3>
        <div class="card card-adicionar-cartao p-4" style="margin-top: 30px;">
            <form id="form-adicionar-cartao" action="/usuario/adicionarCartao" method="POST"
                enctype='multipart/form-data' onsubmit="submitForm()">
                <div class="cartao-form">
                    <p class="mb-2">* Campos Obrigatórios</p>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="group-input">
                                <label for="numero_cartao">* Número do Cartão</label>
                                <input type="text" id="numero_cartao" name="numero_cartao"
                                    placeholder="* Número do Cartão" minlength="19" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="group-input">
                                <label for="codigo_seguranca">* Código de Segurança</label>
                                <input type="text" id="codigo_seguranca" name="codigo_seguranca" minLength="3"
                                    maxLength="4" placeholder="* Código de Segurança" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="group-input">
                                <label for="nome_completo">* Nome Completo</label>
                                <input type="text" id="nome_completo" name="nome_completo" placeholder="* Nome Completo"
                                    minlength="3" required>
                            </div>
                        </div>

                        <div class="col-sm-3 mes-d-n">
                            <div class="group-input">
                                <label for="nome">* Data de Vencimento</label>
                                <select class="custom-select" name="mes" id="mes">
                                    <option selected style="background-color: #e6e6e6; font-weight: bold;">Mês
                                    </option>
                                    <option value="01">Janeiro</option>
                                    <option value="02">Fevereiro</option>
                                    <option value="03">Março</option>
                                    <option value="04">Abril</option>
                                    <option value="05">Maio</option>
                                    <option value="06">Junho</option>
                                    <option value="07">Julho</option>
                                    <option value="08">Agosto</option>
                                    <option value="09">Setembro</option>
                                    <option value="10">Outubro</option>
                                    <option value="11">Novembro</option>
                                    <option value="12">Dezembro</option>
                                </select>
                                <input type="hidden" id="hidden-mes">
                            </div>
                        </div>
                        <div class="col-sm-3 ano-d-n">
                            <div class="group-input">
                                <label for="" class="hiddenName">&nbsp;</label>
                                <select class="custom-select select-ano" name="ano" id="ano">
                                    <option selected style="background-color: #e6e6e6; font-weight: bold;">Ano
                                    </option>
                                </select>
                                <input type="hidden" id="hidden-ano">
                                <span class="theTooltip" id="tooltipAno">Escolha um Ano</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="group-input" style="margin-bottom: 0 !important; height: 100%;">
                                <label for="empresarial">* Tipo</label>
                                <div class="form-check form-check-inline"
                                    style="vertical-align: -webkit-baseline-middle;">
                                    <input class="form-check-input checkbox-input checkbox-tipo-cartao" type="radio"
                                        name="tipo_cartao" id="empresarial" value="juridico">
                                    <label class="form-check-label checkbox-label" for="empresarial">
                                        Empresarial (CNPJ)
                                    </label>
                                </div>
                                <div class="form-check form-check-inline"
                                    style="vertical-align: -webkit-baseline-middle;">
                                    <input class="form-check-input checkbox-input checkbox-tipo-cartao" type="radio"
                                        name="tipo_cartao" id="fisico" value="fisico">
                                    <label class="form-check-label checkbox-label" for="fisico">
                                        Fisico (CPF)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="group-input">
                                <label for="cadastro" id="tipo_label">* CPF</label>
                                <input type="text" id="cadastro" name="cadastro" minLength="14" maxLength="19"
                                    placeholder="* CPF" required>
                            </div>
                        </div>
                    </div>

                </div>
                <input type="submit" class="btn" value="Adicionar">
            </form>
        </div>
    </div>
</div>